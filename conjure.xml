			<packages>
				<package name="application" />
				<package name="compat" />
				<package name="controller" />
				<package name="event" />
				<package name="identity" />
				<package name="input" />
				<package name="language" />
				<package name="provider" />
				<package name="registry" />
				<package name="uri" />
			</packages>
		</skeleton>
	</code>	

	<metadata>
		<element name="version" value="1.0" />
		<element name="authors">
			<element name="Gris-Gris Developers">
